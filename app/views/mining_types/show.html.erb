<p style="color: green"><%= notice %></p>

<div class="container mt-4">
    <%= render @mining_type %>

    <div class="mt-3">
        <%= link_to "Edit this mining type", edit_mining_type_path(@mining_type), class: "btn btn-warning" %> |
        <%= link_to "Back to mining types", mining_types_path, class: "btn btn-secondary" %>
    </div>

    <div class="mt-3">
        <%= button_to "Destroy this mining type", @mining_type, method: :delete, class: "btn btn-danger" %>
    </div>
</div>
