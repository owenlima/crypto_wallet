<p style="color: green"><%= notice %></p>

<div class="container mt-4">
    <%= render @coin %>

    <div class="mt-3">
        <%= link_to "Edit this coin", edit_coin_path(@coin), class: "btn btn-warning" %> |
        <%= link_to "Back to coins", coins_path, class: "btn btn-secondary" %>
    </div>

    <div class="mt-3">
        <%= button_to "Destroy this coin", @coin, method: :delete, class: "btn btn-danger" %>
    </div>
</div>